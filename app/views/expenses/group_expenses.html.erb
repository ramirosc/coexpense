<div class="page-header">
  <h1>Expenses for Group: <%= @group.group_name %>
  <a href="/expenses/new" class="btn btn-lg btn-success">New Expense</a></h1>
</div>


<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Expense name</th>
        <th>How much?</th>
        <th>Created by</th>
        <th>When? </th>
        <th>Category</th>
        <th>Expense type</th>
        <th>Actions</th>
      </tr>

      <% @group.expenses.each do |expense| %>
      <tr>
        <td><%= expense.expense_name %></td>
        <td><%= expense.value %></td>
        <td><%= User.find(expense.user_id).name %></td>
        <td><%= expense.held_on %></td>
        <td><%= expense.category %></td>
        <td><%= expense.expense_type %></td>
        <td>


        <%if current_user.id ==  User.find(expense.user_id).id%>

          <a href="/expenses/<%= expense.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_expense/<%= expense.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %> <% end %>
    </table>
  </div>
</div>
