<div class="page-header">
  <h1>
    My Expenses
    <a href="/expenses/new" class="btn btn-lg btn-success">New Expense</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Expense name</th>
        <th>How much?</th>
        <th>When? (yyyy/mm/dd)</th>
        <th>Category</th>
        <th>Group</th>
        <th>Expense type</th>
        <th>Actions</th>
      </tr>

      <% current_user.expenses.each do |expense| %>
      <tr>
        <td><%= expense.expense_name %></td>
        <td><%= expense.value %></td>
        <td><%= expense.held_on %></td>
        <td><%= expense.category %></td>

        <td>
      <% if  Group.find_by(:id => expense.group_id).nil? %>

      N/A
      <% else %>
      <%= Group.find(expense.group_id).group_name %>
        <% end %>

        </td>
        <td><%= expense.expense_type %></td>
        <td>
          <a href="/expenses/<%= expense.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_expense/<%= expense.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
