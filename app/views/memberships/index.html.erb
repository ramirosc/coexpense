<div class="page-header">
  <h1>
    My Memberships
    <a href="/memberships/new" class="btn btn-lg btn-success">New Membership</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Group</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

          <% current_user.memberships.each do |membership| %>
      <tr>
        <td><%= Group.find(membership.group_id).group_name %></td>
        <td><%= User.find(membership.user_id).name %></td>
        <td>
          <a href="/memberships/<%= membership.id %>" class="btn btn-primary">Show</a>
          <a href="/memberships/<%= membership.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_membership/<%= membership.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
