<div class="page-header">
  <h1>
    My Groups
    <a href="/groups/new" class="btn btn-lg btn-success">New Group</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Group name</th>
        <th>Admin</th>
        <th>Actions</th>
      </tr>


      <% current_user.groups.each do |group| %>
      <tr>
        <td><a href="/groups/<%= group.id %>/edit" ><%= group.group_name %></td>
        <td><%= User.find(group.user_id).name %></td>
        <td>
          <a href="/groups/<%= group.id %>" class="btn btn-primary">Show Details</a>
          <a href="expenses/groups/<%= group.id %>" class="btn btn-info">Show Expenses</a>

          <%if current_user.id ==  User.find(group.user_id).id%>

          <a href= "/memberships/new/<%= group.id %>" class="btn btn-warning">Add Member</a>
          <a href="/delete_group/<%= group.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% else %>
          <a href="/delete_membership/<%= group.id %>/<%= current_user.id %>" class="btn btn-danger" rel="nofollow">Exit group</a>

        </td>
      </tr>

       <% end %>
      <% end %>
    </table>
  </div>
</div>
