<!-- Validation failure messages -->
<% if @group.errors.any? %>
  <% @group.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Group Name: <%= @group.group_name %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_group/<%= @group.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for group_name -->
      <div class="form-group">
        <label for="group_name" class="control-label">
          Group name
        </label>

        <input type="text" id="group_name" name="group_name" placeholder="Group name" class="form-control" value="<%= @group.group_name %>">
      </div>



      <!-- Label and input for user_id -->
      <div class="form-group">
       <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @group.user_id %>">
      </div>

      <button class="btn btn-warning">
        Update Group
      </button>
      or
      <a href="/groups/">Cancel</a>
    </form>
  </div>
</div>
